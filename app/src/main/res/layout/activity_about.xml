<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".Choose">

    <TextView
        android:id="@+id/loginscrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Info"
        android:textColor="#000"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-thin"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/doctor"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr. Ali Raza"
            android:textColor="#000"
            android:textSize="25sp"
            android:padding="20dp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif-thin"
            />

        <TextView
            android:id="@+id/occ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M.Phil (Clinical Psychology)"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-thin"
            />

        <TextView
            android:id="@+id/clinic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 years experience"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-thin"
            />

        <TextView
            android:id="@+id/about"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="My focus is on conducting researches, providing counseling, assessments as well as therapy sessions. Further, I am also keen interested in child and adolescents' risk and protective factors for the development of psychopathology, substance abuse and welling. Especially I want to do work for the better personality development and well-being of those children who are living in orphanages."
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-thin"
            />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            android:textColor="@color/colorAccent"
            android:text="Back" />


    </LinearLayout>

</RelativeLayout>